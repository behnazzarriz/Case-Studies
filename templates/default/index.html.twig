{% extends 'base.html.twig' %}
{% block title %}Startseite{% endblock %}
{% block body %}
    <div class="container mt-5">
        <a class="mt-5" href="{{ path('app_admin') }}">Go to admin panel</a>
        {% for customer in customers %}
            <div class="card mt-5">
                <div class="card-header text-center">
                    <img class="img-fluid mb-2" width="100" height="100" alt="customer"
                         src="{{ asset('uploads/logos/' ~ customer.logoName) }}"/>
                    <h5>{{ customer.firstname }} {{ customer.lastname }}</h5>
                </div>
                <div class="card-body">
                    {% if customer.caseStudies is not empty %}
                        <ul class="list-group">
                            {% for caseStudy in customer.caseStudies %}
                                <li class="list-group-item">
                                    <h6 class="mb-2">{{ caseStudy.title }}</h6>

                                    <img class="img-fluid mb-2" width="100" height="100" alt="case study"
                                         src="{{ asset('/uploads/caseStudiesImages/' ~ caseStudy.pictureName) }}"/>

                                    <p>{{ caseStudy.description }}</p>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p>Für diesen Kunden sind keine Case studies  verfügbar..</p>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
